# ===========================================
# Blog CMS Environment Configuration
# ===========================================

# Application Configuration
NEXT_PUBLIC_APP_NAME="Blog CMS"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_DESCRIPTION="A modern blog CMS built with Next.js and Cloudflare"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-secure-password"
ADMIN_NAME="Admin User"

# ===========================================
# Cloudflare Worker Bindings
# ===========================================
# These are automatically injected by Cloudflare Workers
# DB binding name: DB (D1 Database)
# R2 bucket binding name: MEDIA_BUCKET (R2 Storage)

# ===========================================
# R2 Storage Configuration
# ===========================================
# Public URL for accessing uploaded media
R2_PUBLIC_URL="https://blog-cms-media-production.r2.dev"
# Alternative if using custom domain:
# R2_PUBLIC_URL="https://media.yourdomain.com"

# R2 bucket name (for reference, actual binding is MEDIA_BUCKET)
R2_BUCKET_NAME="blog-cms-media-production"

# Upload limits
MAX_FILE_SIZE="5242880"  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/jpg,image/png,image/gif,image/webp"

# ===========================================
# Feature Flags
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_COMMENTS=true
ENABLE_TAGS=true
ENABLE_CATEGORIES=true
ENABLE_SEO=true

# ===========================================
# Content Configuration
# ===========================================
POSTS_PER_PAGE=10
EXCERPT_LENGTH=150
DEFAULT_AUTHOR="Blog Admin"

# ===========================================
# SEO Configuration
# ===========================================
NEXT_PUBLIC_SITE_NAME="Blog CMS"
NEXT_PUBLIC_SITE_DESCRIPTION="A modern blog platform"
NEXT_PUBLIC_SITE_KEYWORDS="blog,cms,nextjs,cloudflare"
NEXT_PUBLIC_TWITTER_HANDLE="@yourblog"
NEXT_PUBLIC_FACEBOOK_APP_ID=""

# ===========================================
# Development Configuration
# ===========================================
NODE_ENV=development
LOG_LEVEL="info"
DEBUG_MODE=false

# ===========================================
# Production Considerations
# ===========================================
# 1. Change all default passwords and secrets
# 2. Use strong, unique JWT_SECRET (min 32 characters)
# 3. Set up proper R2 bucket permissions
# 4. Configure custom domain for R2 if needed
# 5. Enable proper CORS settings
# 6. Set up monitoring and alerting
# 7. Configure backup strategy for D1 database